# PolyOpt Environment Variables
# Copy this file to .env and fill in your values

# Database
DATABASE_URL="file:./dev.db"  # SQLite for development
# DATABASE_URL="postgresql://user:pass@localhost:5432/polyopt"  # PostgreSQL for production

# üîê SECURITY: Encryption Key (REQUIRED for production)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY="your-secret-encryption-key-here-change-me"

# Polymarket APIs
POLYMARKET_API_URL="https://gamma-api.polymarket.com"
CLOB_API_URL="https://clob.polymarket.com"
NEXT_PUBLIC_DATA_API_URL="https://data-api.polymarket.com"

# Wallet Connect
# Get from: https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID="..."

# Dune Analytics (for leaderboard data)
# Get your free API key at: https://dune.com/settings/api
DUNE_API_KEY="your-dune-api-key-here"

# Cron Secret (for scheduled tasks)
CRON_SECRET="your-random-cron-secret"

# Next.js
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"  # or "production"

# Optional: Stripe (for premium features)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Optional: Redis (for caching)
# REDIS_URL="redis://localhost:6379"

# Optional: Sentry (for error tracking)
# NEXT_PUBLIC_SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
# SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# Optional: Analytics
# NEXT_PUBLIC_POSTHOG_KEY="your-posthog-key"
# NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Feature Flags
FEATURE_BOT_ENABLED="false"
FEATURE_PREMIUM_TIER="false"

# Logging
LOG_LEVEL="info"  # debug, info, warn, error
